# Django Settings
DEBUG=False
SECRET_KEY=django-insecure-your-secret-key-here
ALLOWED_HOSTS=your-production-domain.com,localhost,127.0.0.1

# Database (Default is SQLite, change for PostgreSQL/MySQL)
# Example PostgreSQL: postgres://user:password@hostname:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# SMS Providers
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=your_messaging_service_sid_or_phone

FAST2SMS_API_KEY=your_fast2sms_key

# Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
